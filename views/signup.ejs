    <div class="container text-center my-5 ">
        <div class="user my-3">
            <i class="far fa-edit user-icon"></i>
            <h4 class="login text-light">Register</h4>
        </div>
        <div class="card p-5 w-50 m-auto form-cont">
            <form method="POST" action="/handleRegister">
                <input class="form-control " placeholder="Enter your firstname" type="text" name="firstName" value="<%=oldInputs.firstName%>">
                <input class="form-control my-2 " placeholder="Enter your lastname" type="text" name="lastName" value="<%=oldInputs.lastName%>">
                <input class="form-control my-2 " placeholder="Enter your user" type="text" name="username" value="<%=oldInputs.username%>">
                <% if (errors.find(e=>e.param=='exists username')) { %>
                    <div class="alert alert-danger my-3 text-center">
                        username unavailable
                    </div>
                    <% } %>
                <input class="form-control my-2  " placeholder="Enter your mail" type="text" name="email" value="<%=oldInputs.email%>">
                <% if (errors.find(e=>e.param=='exists email')) { %>
                    <div class="alert alert-danger my-3 text-center">
                        Email already exists
                    </div>
                    <% } %>
                    <% if (errors.find(e=>e.param=='email')) { %>
                        <div class="alert alert-danger">
                            invalid email
                        </div>
                        <% } %>
                <div class="d-flex justify-content-center">
                    <input class=" my-2 mx-2" placeholder="Enter your mail" type="radio" name="gender" value="male">male</input>
                    <input class=" my-2 mx-2" placeholder="Enter your mail" type="radio" name="gender" value="female">female</input>
                </div>

                <input class="form-control my-2  " placeholder="Enter your Password" type="password" name="password">
                <% if (errors.find(e=>e.param=='password')) { %>
                    <div class="alert alert-danger">
                        password must contain upperCase char and lowerCase char and specialChar
                    </div>
                    <% } %>
                <input class="form-control my-2  " placeholder="Enter your mobilePhone" type="text" name="phone" value="<%=oldInputs.phone%>">
                <% if (errors.find(e=>e.param=='phone')) { %>
                    <div class="alert alert-danger">
                       invalid Phone number
                    </div>
                    <% } %>
                <input class="form-control my-2 " placeholder="Enter your address" type="text" name="address" value="<%=oldInputs.address%>">

                <button class="btn btn-dark btn-dark-outline my-4 w-100 rounded">Register</button>
                <a class="btn btn-dark btn-default-outline" href="/signin">Login</a>
            </form>
        </div>
    </div>

